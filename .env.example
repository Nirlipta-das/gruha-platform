# GRUHA Platform Environment Variables
# Copy this file to .env and fill in actual values

# =============================================================================
# BLOCKCHAIN (Polygon Testnet - REAL BLOCKCHAIN)
# =============================================================================
# Get from https://dashboard.alchemy.com - FREE tier
ALCHEMY_API_KEY="your_alchemy_api_key_here"

# Your wallet private key (WITHOUT 0x prefix)
# IMPORTANT: Use a test wallet, never your main wallet!
# Get testnet MATIC from: https://faucet.polygon.technology/
DEPLOYER_PRIVATE_KEY="your_private_key_here"

# Optional: For contract verification on PolygonScan
# Get from https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY="your_polygonscan_api_key"

# Deployed contract address (filled after deployment)
GRUHA_CONTRACT_ADDRESS=""

# Network to use: mumbai, amoy, or localhost
BLOCKCHAIN_NETWORK="amoy"

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://gruha_user:gruha_pass@localhost:5432/gruha_db?schema=public"
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
OTP_EXPIRES_IN="300"

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# SMS Gateway (Twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Weather Data (IMD/OpenWeatherMap)
OPENWEATHERMAP_API_KEY=""

# Maps
MAPBOX_ACCESS_TOKEN=""

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_BLOCKCHAIN_NETWORK="amoy"
NEXT_PUBLIC_CONTRACT_ADDRESS=""

# =============================================================================
# PAYMENT / SETTLEMENT
# =============================================================================
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
LIQUIDITY_POOL_ACCOUNT=""

# =============================================================================
# FILE STORAGE
# =============================================================================
S3_BUCKET_NAME="gruha-documents"
S3_REGION="ap-south-1"
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
# For local development, use MinIO
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
PORT="3000"
API_PORT="4000"
NEXT_PUBLIC_API_URL="http://localhost:4000/v1"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=""
LOG_LEVEL="debug"
